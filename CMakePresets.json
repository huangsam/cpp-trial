{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base Configuration",
      "description": "Common settings for all configurations.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Development Build (Debug)",
      "description": "Debug build for local development.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ci",
      "displayName": "CI Build (Release)",
      "description": "Release build for CI systems.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build (Optimized)",
      "description": "Optimized release build for final artifacts.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Build Development (Debug)",
      "configurePreset": "dev"
    },
    {
      "name": "ci",
      "displayName": "Build CI (Release)",
      "configurePreset": "ci"
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "displayName": "Test Development (Debug)",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci",
      "displayName": "Test CI (Release)",
      "configurePreset": "ci",
      "output": {
        "outputOnFailure": true,
        "quiet": true
      },
      "execution": {
        "stopOnFailure": true
      }
    },
    {
      "name": "release",
      "displayName": "Test Release (Optimized)",
      "configurePreset": "release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
